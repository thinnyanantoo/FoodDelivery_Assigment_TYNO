<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="#CDCCCC"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:src="@drawable/success"
        android:id="@+id/btn_success"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_xxlarge"
        android:layout_marginRight="@dimen/margin_xxlarge"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/cambay"
        android:text="Thank You For \n Your Order"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:textSize="20sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_xxlarge"
        android:textAlignment="center"
        android:layout_marginRight="@dimen/margin_xxlarge"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/cambay"
        android:text="You can track the delivery \n in the order sections"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:layout_marginBottom="8dp"
        android:textSize="16sp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTrackMyOrder"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Order finished"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_marginStart="@dimen/margin_xlarge"
        android:layout_marginEnd="@dimen/margin_xlarge"
        android:layout_marginTop="8dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.round"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOrderSomethingElse"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Order Something Else"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_marginStart="@dimen/margin_xlarge"
        android:layout_marginEnd="@dimen/margin_xlarge"
        android:layout_marginTop="8dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.round"/>
</LinearLayout>