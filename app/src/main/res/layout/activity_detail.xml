<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:collapsedTitleGravity="start|top"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:background="@color/text_color"
            app:scrimAnimationDuration="2000">
            <RelativeLayout
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:gravity="center"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                android:background="#ffbbae">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:backgroundTint="#ffbbae"
                    >
                    <ImageView
                        android:id="@+id/ivRestaurantImageInDetail"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/burger"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:background="#ffbbae"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:popupTheme="@style/AppTheme.PopupOVerlay"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
      
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:alpha="@android:integer/config_longAnimTime"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/margin_medium">
                <TextView
                    android:id="@+id/tvImageNameInDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:clickable="true"
                    android:text="Really Cool Burgers"
                    android:padding="@dimen/margin_small"
                    android:fontFamily="@font/cambay"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_regular_3x"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:id="@+id/lllayout"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_24"/>
                    <TextView
                        android:id="@+id/tvImageRateInDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.9"
                        android:fontFamily="@font/cambay"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_regular_2x" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cambay"
                        android:text="(124 ratings) cafe - Western Food - $$"
                        android:textColor="@color/color_profile_tint_color"
                        android:layout_marginStart="@dimen/margin_small"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgFavorite"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_favorite_border_24" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_location_on_24"/>
                    <TextView
                        android:id="@+id/tvAddressInDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cambay"
                        android:text="123 Rock Street, \t"
                        android:textColor="@color/color_profile_tint_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cambay"
                        android:text="New York City"
                        android:visibility="gone"
                        android:textColor="@color/color_profile_tint_color"/>
                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:background="@color/color_profile_tint_color">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cambay"
                        android:text="Popular Choices"
                        android:layout_marginStart="@dimen/margin_medium_2"
                        android:textSize="@dimen/text_regular_2x"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:textStyle="bold"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvPopularChoice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/rv_popular_choice"
                        android:layout_marginTop="@dimen/margin_xxlarge"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:clipToPadding="false"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items"
            android:textColor="@android:color/black"
            android:fontFamily="@font/cambay"
            android:textSize="@dimen/text_heading_1x"
            android:layout_marginTop="@dimen/margin_medium_1"
            android:layout_marginBottom="@dimen/margin_medium_3"
            android:layout_marginStart="@dimen/margin_medium_3"
            android:textStyle="bold"
            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvBurgersInPopular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:listitem="@layout/rv_burgers_in_popular"
                            android:clipToPadding="false"
                            android:layout_marginBottom="@dimen/margin_medium"/>
      </LinearLayout>
  </androidx.core.widget.NestedScrollView>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@color/text_color"
            android:layout_margin="@dimen/margin_medium_2"
            android:id="@+id/btnCart"
            android:visibility="gone"
            android:gravity="bottom|end"
            android:text="View Cart"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>