<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="20dp"
    android:alpha="9.0">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:weightSum="5">
        <TextView
            android:id="@+id/foodName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Classic Cheese Burger"
            android:textSize="@dimen/text_regular"
            android:maxLines="2"
            android:fontFamily="@font/cambay"
            android:layout_weight="3"/>
        <RelativeLayout
            android:layout_toRightOf="@id/foodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2">
<!--            <TextView-->
<!--                android:id="@+id/foodPrize"-->
<!--                android:layout_width="100dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="16"-->
<!--                android:fontFamily="@font/cambay"-->
<!--                />-->
<!--            <TextView-->
<!--               android:layout_toRightOf="@id/foodPrize"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="$"-->
<!--                android:fontFamily="@font/cambay"-->
<!--                />-->
            <TextView
                android:id="@+id/foodPrize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:fontFamily="@font/cambay"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_toRightOf="@id/foodPrize"
                android:fontFamily="@font/cambay"
                android:textColor="@android:color/black"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:weightSum="4"
        android:layout_marginTop="@dimen/margin_medium">
        <TextView
            android:id="@+id/foodDescription"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small"
            android:maxLines="2"
            android:layout_weight="2"
            android:fontFamily="@font/cambay"
            android:text="best auguest best auguest best auguest best auguest best auguest best auguest"
            android:layout_below="@id/foodName"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        <ImageView
            android:id="@+id/ivStar"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_star_24"
            android:layout_marginStart="100dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular"
                android:layout_toRightOf="@id/ivStar"
                android:textColor="@color/text_color"/>
        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>